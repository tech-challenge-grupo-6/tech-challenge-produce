{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",                     /* Disable resolving symlinks to their realpath. This correlates to the same flag in node. */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
  },
  "exclude": [
    "jest.config.ts",
    "node_modules",
    "*/test/*",
    "dist",
    "**/*spec.ts",
    "*/.test.ts"
  ]
}
