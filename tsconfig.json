{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "jest.config.ts",
    "node_modules",
    "*/tests/*",
    "dist",
    "**/*spec.ts",
    "*/.test.ts"
  ]
}
